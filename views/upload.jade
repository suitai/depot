form(method="POST", action="/upload", enctype="multipart/form-data")
  .form-group
    label(for="SelectDir") Directory
    select.form-control#SelectDir(name='dir')
      each item in directory
        option= item
  .form-group
    label(for="InputFile") Files
    input.form-control-file#InputFile(type="file", name="file", multiple)
  button.btn.btn-primary(type="submit") Upload

p.margin-top Command Line
pre
  code curl -F "dir=Test" -F "file=@filename"  #{url}/upload
