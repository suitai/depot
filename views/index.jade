extends layout

block content
  div#app
    v-app#inspire
      v-container
        v-card(flat)
          v-toolbar(color="primary", dark, flat)
            v-toolbar-title #{title}

            template(v-slot:extension)
              v-tabs(v-model="tab", align-with-title)
                v-tab(href="#home") Home
                v-tab(href="#files") Files

          v-tabs-items(v-model="tab")
            v-tab-item#home
              include home
            v-tab-item#files
              include list
